{
  "hooks": {
    "before:init": ["bun run lint", "bun run type-check", "bun test"],
    "after:bump": "bun run build"
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "hooks": {
    "before:init": ["bun run lint", "bun run type-check", "bun test"]
  }
}
